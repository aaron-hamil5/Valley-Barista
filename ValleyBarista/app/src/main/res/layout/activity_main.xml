<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/NameOfUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:hint=" Teacher's Name"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:hint=" Room Location"
            android:inputType="textCapWords" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_margin="16dp"
            android:text="Coffee's" />

        <CheckBox
            android:id="@+id/espresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Espresso"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/douEspresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Double Espresso"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/macchaiato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Macchaiato"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/Cappuccino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Cappuccino"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/americano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Americano (Black Coffee)"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/latte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Latte"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/mocha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Mocha"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/flatWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Flat White"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/hotChocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Hot Chocolate"
            android:textSize="16sp" />


        <TextView
            style="@style/HeaderTextStyle"
            android:layout_margin="16dp"
            android:text="Has own mug?" />

        <CheckBox
            android:id="@+id/cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Tick IF Yes"
            android:textSize="16sp" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_margin="16dp"
            android:text="Extras" />

        <CheckBox
            android:id="@+id/milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Milk"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Sugar"
            android:textSize="16sp" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_margin="16dp"
            android:text="Toppings" />

        <CheckBox
            android:id="@+id/whippedCream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Whipped Cream"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/marshmallows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:paddingLeft="24dp"
            android:text="Marshmallows"
            android:textSize="16sp" />


        <TextView
            style="@style/HeaderTextStyle"
            android:layout_margin="16dp"
            android:text="Quantity (You can just leave this at 1)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:onClick="decrement"
                android:text="-" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="increment"
                android:text="+" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="submitOrder"
            android:text="Order" />


    </android.widget.LinearLayout>
</ScrollView>